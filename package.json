{
  "name": "course-hunt",
  "productName": "Course Hunt",
  "description": "Download the free courses from coursehunters.net easily",
  "version": "0.0.6",
  "author": "Idrees Dargahwala",
  "main": "app/background.js",
  "build": {
    "appId": "com.shifters.coursehunt",
    "files": [
      "app/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources"
    }
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "start": "node build/start.js",
    "release": "webpack --config=build/webpack.app.config.js --env=production && electron-builder -mwl"
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.2",
    "electron-updater": "^4.0.6",
    "fs-jetpack": "^2.2.2",
    "is-online": "^8.2.0",
    "request": "^2.88.0",
    "request-progress": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "babel-loader": "^8.0.6",
    "babel-plugin-transform-object-rest-spread": "^7.0.0-beta.3",
    "css-loader": "^3.0.0",
    "electron": "^18.3.7",
    "electron-builder": "^20.44.4",
    "friendly-errors-webpack-plugin": "^1.7.0",
    "source-map-support": "^0.5.12",
    "spectron": "^7.0.0",
    "style-loader": "^0.23.1",
    "url-loader": "^2.0.1",
    "webpack": "^4.35.0",
    "webpack-cli": "^3.3.5",
    "webpack-merge": "^4.2.1",
    "webpack-node-externals": "^1.7.2"
  }
}
